<Window x:Class="IntroTotWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntroTotWPF"
        mc:Ignorable="d"
        Title="Intro tot WPF" Height="450" Width="800">
    <Grid x:Name="Start" MouseDown ="ChangeBackground">
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="51*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="tb1" FontSize="20" Foreground="SpringGreen" 
                   TextAlignment="Center" VerticalAlignment="Top" 
                   Text="Dit is een eerste testje om wat markup uit te testen"
                   MouseMove="tb_MouseMove" Margin="0,127,0,0" Grid.Row="1"/>
        <TextBlock x:Name="tb2" MouseMove="tb_MouseMove" Text="Text 2 lorem ipsun" Grid.RowSpan="2"/>
    </Grid>
</Window>
